<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Successfully Edited Person!</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  </head>
  <body>

    <div class="container">
        <div class="row h-100">
          <div class="col-lg-4"><!-- this is just here to center the next column --></div>

          <div class="col-lg-4 text-center my-auto">
                <p>
                    Successfully edited <b><%= name %></b> !
                </p>
                <p>

                  <% if(phoneNumber){ %>
                    Phone Number is now <b><%= phoneNumber %></b> !
                  <% } else{ %>  
                    No Saved Phone Number
                 <% } %>
                  
              </p>
              <p>

                <% if(address){ %>
                  Address is now <b><%= address %></b> !
                <% } else{ %>  
                  No Saved Address
               <% } %>

                
            </p>
            <p>

              Cuisine Type is now <b><%= cuisineType %></b>
            </p>
            <p>

              <% if(hours){ %>
                Hours are now <b><%= hours %></b>
              <% } else{ %>  
                No Hours Listed
             <% } %>
              
            </p>
            <p>

              <% if(latitude){ %>
                Latitude is now <b><%= latitude %></b>
              <% } else{ %>  
                No Saved Latitude
             <% } %>
              
            </p>
            <p>

              <% if(longitude){ %>
                Longitude is now <b><%= longitude %></b>
              <% } else{ %>  
                No Saved Longitude
             <% } %>
              
            </p>
              <p>
                    <a href="/allrestaurants">See all restaurants</a>                    
                </p>
                <p>
                    <a href="/public/personform.html">Create a new restaurant</a>                    
                </p>
          </div>

          <div class="col-lg-4"><!-- this is just here to center the previous column --></div>

        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>


