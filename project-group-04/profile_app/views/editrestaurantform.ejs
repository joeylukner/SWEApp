<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Edit Restaurant</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  </head>
  <body>

    <div class="container">
      <div class="row h-100">
          <div class="col-lg-4"><!-- this is just here to center the next column --></div>

          <div class="col-lg-4 text-center my-auto">
              <p>
                <form action="/editrestaurant" method="post">
                  <div class="mb-3">
                    <label class="form-label">Name (cannot be changed)</label>
                    <input type="text" class="form-control" name="name" value="<%= restaurant.name %>" readonly>
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Phone Number (include only numbers)</label>
                    <input type="number" class="form-control" name="phoneNumber" value = "<%= restaurant.phoneNumber %>">
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Cuisine Type</label>
                    <input type="text" class="form-control" name="cuisineType" value = "<%= restaurant.cuisineType %>">>
                    <div id="nameHelp" class="form-text">This is required</div>
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Address</label>
                    <input type="text" class="form-control" name="address" value = "<%= restaurant.address %>">>
        
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Hours: Enter in format "M: XX-XX, T: XX-XX, W: XX-XX, R: XX-XX, F: XX-XX, S: XX-XX, U: XX-XX", Writing "Closed" instead of a time if closed all day</label>
                    <input type="text" class="form-control" name="hours" value = "<%= restaurant.hours %>">>
             
                  </div>

                  <div class="mb-3">
                    <label class="form-label">Latitude</label>
                    <input type="number" class="form-control" name="latitude" value = "<%= restaurant.latitude %>">
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Longitude</label>
                    <input type="number" class="form-control" name="longitude" value = "<%= restaurant.longitude %>">
                  </div>
                  <input type="submit" class="btn btn-primary"></button>
                </form>
              </p>
              <p>
                  <a href="/allrestaurants">Cancel</a>
              </p>
          </div>

          <div class="col-lg-4"><!-- this is just here to center the previous column --></div>

      </div>
  </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>


